<%= form_for @user do |f| %>

  <%= f.label :username %><br>
  <%= f.text_field :username %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br>

  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %><br>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label "Birthday: example December 25, 1999" %><br>
  <%= f.text_field :birthday %><br>

  <%= f.label "Preferences: example bordeaux, full-bodied reds, roses" %><br>
  <%= f.text_field :preferences %><br>

  <%= f.label :email %><br>
  <%= f.text_field :email %><br>

  <%= f.submit 'Submit' %>

<% end %>

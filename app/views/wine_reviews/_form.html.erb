<ul>
  <% @wine_review.errors.full_messages.each do |error_msg| %>
    <li><%= error_msg %></li>
  <% end %>
</ul>

<%= form_for @wine_review do |f| %>
   <!-- use existing style from helper form.new_wine -->
  <div class="form">

    <%= f.label :title %><br>
    <%= f.text_field :title %><br>

    <%= f.label :content %><br>
    <%= f.text_area :content %><br>

    <%= f.label "Choose a rating, 5 being the highest and 1 being the lowest" %><br>
    <%= f.select :rating, options_for_select(%w[1 2 3 4 5]) %><br>

    <%= f.hidden_field :wine_id, {value: @wine.id} %>

    <%= f.submit "Submit your review" %>

  </div>
<% end %>

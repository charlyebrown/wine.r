<h2>Your results </h2>
<% @results.each do |result| %>
<div class='results'>
  <h4><%= result["name"] %></h4>
  <h4><%= result["winery"] %></h4>
  <h4><%= result["varietal"] %></h4>
  <h4><%= result["vintage"] %></h4>
  <h4><%= result["price"] %></h4>
  <% if !current_user.wines.include?(code: result[:code]) %>
    <%= form_tag('/wines/add_to_user_favorites_wines', method: :post) do |f| %>
      <% hidden_field_tag :code, result["code"] %>
      <%= submit_tag 'Add to Your Favorites' %>
    <% end %>
  <% end %>
</div>
<% end %>
